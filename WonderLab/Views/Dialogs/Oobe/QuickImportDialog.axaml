<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 MinWidth="450"
             x:Class="WonderLab.QuickImportDialog">
	<Grid Margin="16 24 16 0"
		  RowDefinitions="Auto, Auto, Auto">
		<TextBlock Classes="Subtitle"
				   Text="快速导入"/>

		<TextBox Margin="0 16 0 24"
				 HorizontalAlignment="Stretch"
				 Watermark="选择启动器路径"
				 Text="{Binding LauncherPath, Mode=TwoWay}"
				 Grid.Row="1">
			<TextBox.InnerRightContent>
				<Button Classes="icon"
						Margin="0 0 4 0"
						Content="&#xED43;"
						Command="{Binding BrowserLauncherCommand}"/>
			</TextBox.InnerRightContent>
		</TextBox>

		<Border Grid.Row="2"
				Padding="16"
				Margin="-16 0"
				CornerRadius="0 0 12 12"
				BorderBrush="{DynamicResource DialogPopupFooterBorderBrush}"
				Background="{DynamicResource DialogPopupFooterBackgroundBrush}">
			<Grid HorizontalAlignment="Right"
				  ColumnDefinitions="Auto, Auto">
				<Button Padding="16 6"
						Margin="0 0 8 0"
						Classes="ripple"
						Content="关闭"
						Command="{Binding CloseCommand}"
						Grid.Column="0"/>

				<Button Classes="primary"
						Content="导入"
						Command="{Binding ImportCommand}"
						IsEnabled="{Binding IsImportButtonEnabled}"
						Grid.Column="1"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
