<wc:WonderWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                 xmlns:wc="using:WonderLab.Controls"
                 xmlns:models="using:WonderLab.Models"
                 xmlns:vmw="using:WonderLab.ViewModels.Windows"
                 x:Class="WonderLab.Views.Windows.MainWindow"
                 x:DataType="vmw:MainWindowViewModel"
                 Title="WonderLab">
    <wc:WonderWindow.TitleBarContent>
        <Grid ColumnDefinitions="auto auto * auto">
			<Button Classes="icon"
                    Margin="10 0 0 0"
                    Content="&#xE72B;"
                    Name="PART_BackButton"
                    Click="OnBackButtonClick"
                    Grid.Column="0"/>

			<Button Classes="icon"
                    Content="&#xE72A;"
                    Name="PART_ForwardButton"
                    Click="OnForwardButtonClick"
                    Grid.Column="1"/>
            
            <ListBox Name="PART_ListBox"
                     SelectionChanged="OnSelectionChanged"
                     ItemsSource="{Binding TabItems}"
                     SelectedItem="{Binding CurrentTab}"
                     ItemContainerTheme="{StaticResource TopBarItemTheme}"
                     Grid.Column="2">
                <ListBox.ItemsPanel>
					<ItemsPanelTemplate>
						<VirtualizingStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
					<DataTemplate DataType="models:TabItemModel">
                        <!--WIP: I18N-->
						<TextBlock FontSize="18"
                                   FontWeight="Medium"
                                   Text="{Binding I18nKey}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Padding="8 0"
                    Margin="8 0 10 0"
                    Classes="ripple"
                    Background="transparent"
                    Grid.Column="4">
                <StackPanel Spacing="8"
                            Orientation="Horizontal">
                    <TextBlock Classes="LabelLarge"
                               VerticalAlignment="Center"
                               Text="yangSpring114"/>

					<TextBlock FontSize="16"
                               Classes="Icon"
                               Text="&#xE77B;"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </wc:WonderWindow.TitleBarContent>

    <Grid RowDefinitions="auto * auto">
        <Border Opacity="0.35"
                Grid.RowSpan="3">
			<Border.Background>
                <ImageBrush Stretch="Uniform" Source="C:\Users\wxysd\Desktop\总整包\素材库\图片素材\杂项\Hachiroku_Stand02.png"/>
            </Border.Background>
        </Border>

        <Border Height="25"
                Name="PART_TestTipBanner"
                UseLayoutRounding="False"
                BorderThickness="0 0 0 0.2"
                Background="{DynamicResource SecondaryContainerBrush}"
                BorderBrush="{DynamicResource OnSecondaryContainerBrush}">
			<StackPanel Spacing="8"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
				<TextBlock FontSize="16"
                           Classes="Icon"
                           Text="&#xE7BA;"
                           Foreground="{DynamicResource OnSecondaryContainerBrush}"/>

                <TextBlock Foreground="{DynamicResource OnSecondaryContainerBrush}"
                           Text="当前版本为内测版本，不代表最终品质"/>
            </StackPanel>
        </Border>

        <wc:Frame Name="PART_HostFrame"
                  DefaultPageKey="Minecraft"
                  Navigated="OnNavigated"
                  Grid.Row="1"/>
    </Grid>
</wc:WonderWindow>
