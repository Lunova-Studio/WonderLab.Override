<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:wc="using:WonderLab.Controls"
             x:Class="WonderLab.Views.Pages.GameSetting.SettingPage">
    <StackPanel Spacing="8"
                Margin="0 4 0 0">
        <wc:SettingCard Icon="&#xE8B4;"
                        Header="启用独立游戏设置"
                        Background="{DynamicResource SettingCardsBackgroundBrush}">
                <ToggleSwitch Margin="0 3"/>
        </wc:SettingCard>

        <TextBlock Margin="0 16 0 0"
                   Classes="TitleMedium"
                   Text="启动设置"/>

        <ItemsControl Classes="card">
            <wc:SettingCard Icon="&#xE7C4;"
                            Header="版本隔离">
                <ToggleSwitch/>
            </wc:SettingCard>

            <Separator Margin="16 0"/>
            
            <wc:SettingCard Icon="&#xE740;"
                            Header="是否全屏">
                <ToggleSwitch />
            </wc:SettingCard>

            <Separator Margin="16 0"/>
            
            <wc:SettingCard Icon="&#xE743;"
                            Header="游戏窗口大小调整">
                <StackPanel Orientation="Horizontal" Spacing="8">
					<TextBox Text="{Binding Width, Mode=TwoWay}"/>

					<TextBlock FontSize="18"
                               Classes="Icon"
                               Text="&#xE711;"
                               VerticalAlignment="Center"/>

					<TextBox Text="{Binding Height, Mode=TwoWay}"/>
				</StackPanel>
            </wc:SettingCard>
            
            <Separator Margin="16 0"/>

            <wc:SettingCard Icon="&#xE953;"
                            Header="服务器地址">
                <TextBox Text="{Binding ServerAddress, Mode=TwoWay}"/>
            </wc:SettingCard>
                   
            <Separator Margin="16 0"/>

            <wc:SettingCard Icon="&#xE967;"
                            Header="Jvm 参数">
                <TextBox Text="{Binding JvmArgument, Mode=TwoWay}"/>
            </wc:SettingCard>
        </ItemsControl>
        
        <TextBlock Margin="0 16 0 0"
                   Classes="TitleMedium"
                   Text="账户设置"/>
        
			<wc:SettingCard Icon="&#xE748;"
							Header="启动账户设置"
							IsEnabled="{Binding IsEnableSpecificSetting}"
                            Background="{DynamicResource SettingCardsBackgroundBrush}">
				<ComboBox Width="150"
						  ItemsSource="{Binding Accounts}"
						  SelectedItem="{Binding ActiveAccount}">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<DockPanel LastChildFill="True">
								<TextBlock Classes="Body"
										   Text="{Binding Name}"
										   VerticalAlignment="Center"
										   TextTrimming="CharacterEllipsis"
										   DockPanel.Dock="Left"/>

								<TextBlock Classes="Body"
										   Text="{Binding Type}"
										   TextAlignment="Right"
										   VerticalAlignment="Center"
										   HorizontalAlignment="Right"
										   Foreground="{DynamicResource ApplicationSubtitleForegroundBrush}"
										   DockPanel.Dock="Right"/>
							</DockPanel>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</wc:SettingCard>
    </StackPanel>
</UserControl>