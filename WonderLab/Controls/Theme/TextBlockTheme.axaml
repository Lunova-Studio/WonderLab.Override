<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20">
			<StackPanel Spacing="8">
				<TextBlock Text="阿米诺斯 Caption" Classes="Caption"/>
				<TextBlock Text="阿米诺斯 Body" Classes="Body"/>
				<TextBlock Text="阿米诺斯 BodyStrong" Classes="BodyStrong"/>
				<TextBlock Text="阿米诺斯 Subtitle" Classes="Subtitle"/>
				<TextBlock Text="阿米诺斯 Title" Classes="Title"/>
				<TextBlock Text="阿米诺斯 TitleLarge" Classes="TitleLarge"/>
				<TextBlock Text="阿米诺斯 Display" Classes="Display"/>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<ControlTheme TargetType="TextBlock" x:Key="{x:Type TextBlock}">
		<Style Selector="^.Caption">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="FontWeight" Value="Regular"/>
		</Style>

		<Style Selector="^.Body">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Regular"/>
		</Style>

		<Style Selector="^.BodyStrong">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="^.Subtitle">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="^.Title">
			<Setter Property="FontSize" Value="28"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="^.TitleLarge">
			<Setter Property="FontSize" Value="40"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="^.Display">
			<Setter Property="FontSize" Value="68"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<!-- Title -->
		<Style Selector="^.MDTitleLarge">
			<Setter Property="FontSize" Value="22"/>
			<Setter Property="FontWeight" Value="Medium"/>
		</Style>
		
		<Style Selector="^.MDTitleMedium">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Medium"/>
		</Style>
		
		<Style Selector="^.MDTitleSmall">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Medium"/>
		</Style>

		<Style Selector="^.MDBodyLarge">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Regular"/>
		</Style>
		
		<Style Selector="^.MDBodyMedium">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Regular"/>
		</Style>
		
		<Style Selector="^.MDBodySmall">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="FontWeight" Value="Regular"/>
		</Style>
	</ControlTheme>
</ResourceDictionary>
