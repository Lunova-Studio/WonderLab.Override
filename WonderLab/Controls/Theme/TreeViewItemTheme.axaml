<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:WonderLab.Controls"
                    xmlns:converters="using:Avalonia.Controls.Converters">
    <Design.PreviewWith>
        <Border Padding="20"
                MinWidth="300">
            <TreeView>
                <TreeViewItem Header="Level 1">
					<TreeViewItem Header="Game 1"/>
					<TreeViewItem Header="Game 2"/>
					<TreeViewItem Header="Game 3"/>
					<TreeViewItem Header="Game 4"/>
					<TreeViewItem Header="Game 5"/>
					<TreeViewItem Header="Game 6"/>
                </TreeViewItem>
            </TreeView>
        </Border>
    </Design.PreviewWith>

    <x:Double x:Key="TreeViewItemIndent">16</x:Double>
    <x:Double x:Key="TreeViewItemMinHeight">25</x:Double>
    <x:Double x:Key="TreeViewItemExpandCollapseChevronSize">12</x:Double>
    
    <ControlTheme x:Key="TreeViewExpandCollapseChevron" TargetType="ToggleButton">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="Width" Value="{StaticResource TreeViewItemExpandCollapseChevronSize}"/>
        <Setter Property="Height" Value="{StaticResource TreeViewItemExpandCollapseChevronSize}"/>
        
        <Setter Property="Template">
            <ControlTemplate>
                <controls:RippleControl VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        CornerRadius="{StaticResource FullCornerRadius}"
                                        RippleFill="{DynamicResource RippleEffectFillBrush}">
                    <TextBlock Classes="Icon"
                               Text="&#xE76C;"
                               Name="PART_IconTextBlock"
                               Foreground="{TemplateBinding Foreground}">
                        <TextBlock.Transitions>
							<Transitions>
								<TransformOperationsTransition Duration="0:0:.15"
                                                               Property="RenderTransform"
                                                               Easing="ExponentialEaseOut"/>
                            </Transitions>
                        </TextBlock.Transitions>
                    </TextBlock>
                </controls:RippleControl>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:checked /template/ TextBlock#PART_IconTextBlock">
            <Setter Property="RenderTransform" Value="rotate(90deg)"/>
        </Style>
    </ControlTheme>
    
    <ControlTheme x:Key="{x:Type TreeViewItem}" TargetType="TreeViewItem">
        <Setter Property="IsExpanded" Value="True"/>
        <Setter Property="Padding" Value="12 0 4 0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource OnSurfaceBrush}"/>
        <Setter Property="MinHeight" Value="{DynamicResource TreeViewItemMinHeight}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TreeViewItemBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource TreeViewItemBorderThemeThickness}"/>
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <Border Focusable="True"
                            Name="PART_LayoutRoot"
                            Classes="TreeViewItemLayoutRoot"
                            MinHeight="{TemplateBinding MinHeight}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            TemplatedControl.IsTemplateFocusTarget="True">
                        <Grid Name="PART_Header"
                              ColumnDefinitions="Auto, *">
                            <Panel Margin="12 0 0 0"
                                   Name="PART_ExpandCollapseChevronContainer">
                                <ToggleButton Name="PART_ExpandCollapseChevron"
                                              Focusable="False"
                                              IsChecked="{TemplateBinding IsExpanded, Mode=TwoWay}"
                                              Theme="{StaticResource TreeViewExpandCollapseChevron}"/>
                            </Panel>
                            
                            <ContentPresenter Focusable="False"
                                              Background="Transparent"
                                              Name="PART_HeaderPresenter" 
                                              Margin="{TemplateBinding Padding}"
                                              Content="{TemplateBinding Header}"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                              HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                              Grid.Column="1"/>
                        </Grid>
                    </Border>
                    
                    <ItemsPresenter Name="PART_ItemsPresenter"
                                    IsVisible="{TemplateBinding IsExpanded}"
                                    ItemsPanel="{TemplateBinding ItemsPanel}"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^[Level=0] /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="{DynamicResource TreeViewItemLevel0BackgroundBrush}"/>
        </Style>
        
        <Style Selector="^[Level=0] /template/ Border#PART_LayoutRoot:pointerover">
            <Setter Property="Background" Value="{DynamicResource TreeViewItemSelectedBackgroundBrush}"/>
        </Style>

        <!--  PointerOver state  -->
        <Style Selector="^[Level=1] /template/ Border#PART_LayoutRoot:pointerover">
            <Setter Property="Background" Value="{DynamicResource TreeViewItemLevel1PointoverBackgroundBrush}" />
        </Style>
        
        <!--  Pressed state  -->
        <Style Selector="^:pressed /template/ Border#PART_LayoutRoot:pointerover">
            <Setter Property="Background" Value="{DynamicResource ListBoxItemPointerPressedBackgroundBrush}" />
        </Style>
        
        <!--  Selected state  -->
        <Style Selector="^:selected /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="{DynamicResource TreeViewItemSelectedBackgroundBrush}" />
        </Style>
        
        <Style Selector="^:empty /template/ ToggleButton#PART_ExpandCollapseChevron">
            <Setter Property="IsVisible" Value="False" />
        </Style>
        
        <Style Selector="^:empty /template/ Panel#PART_ExpandCollapseChevronContainer">
            <Setter Property="Width" Value="{StaticResource TreeViewItemExpandCollapseChevronSize}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
